<%- layout('layouts/main.ejs') %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!--Bootstrap-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
     <!--FONT AWESOME-->
     <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm" crossorigin="anonymous">
    <!--CSS-->
    <link rel="stylesheet" href="css/style.css" type="Text/css">
  </head>
  <body>
    
    <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
      <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
      </div>
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img src="https://media.istockphoto.com/photos/little-ferret-picture-id465574483?k=20&m=465574483&s=612x612&w=0&h=K-cfJ33gIsCaqyGgn_BSgZEv9j8gvIn5JZOHU0CL0zE=" class="d-block w-100" alt="...">
          <div class="carousel-caption d-none d-md-block">
            
            <h5> <button type="button" class="btn btn-secondary">Hurón chocolate.</button> </h5>
            <p><button type="button" class="btn btn-secondary">A los hurones de color chocolate les encanta sonreir.</button></p>
          </div>
        </div>
        <div class="carousel-item">
          <img src="https://media.istockphoto.com/photos/portrait-of-a-little-ferret-picture-id465611885?k=20&m=465611885&s=612x612&w=0&h=6ex7fPTF6Pd5gu_AARsoyhJTetEqepm5Kc9Jp6MH40A=" class="d-block w-100" alt="...">
          <div class="carousel-caption d-none d-md-block">
            <h5> <button type="button" class="btn btn-secondary">Hurón sable enfrentando al abismo</button> </h5>
            <p><button type="button" class="btn btn-secondary">Los hurones aunque sociables, aprecian mucho la soledad; son cazadores solitarios.</button></p>
          </div>
        </div>
        <div class="carousel-item">
          <img src="https://media.istockphoto.com/photos/portrait-of-a-little-ferret-picture-id465611883?k=20&m=465611883&s=612x612&w=0&h=HqBpWqedBIDwVGKxLvmkHW1wzsZEjd-HxFIdGFLLFHw=" class="d-block w-100" alt="...">
          <div class="carousel-caption d-none d-md-block">
            <h5><button type="button" class="btn btn-secondary">Hurón chocolate gruñón</button> </h5>
            <p><button type="button" class="btn btn-dark">Los hurones de color chocolate creen que el color de su nariz los hace muy especiales.</button></p>
          </div>
        </div>
      </div>
      <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
    </div>

      <br />
      <br />
      <div class="d-grid gap-2 col-6 mx-auto">
        <a href="./hurones" class="btn btn-primary">REGRESAR</a>
      </div>
      <br />
      <br />
    <!--JS Bootstrap-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>
</html>